{
  "manifest_version": 2,
  "name": "SUUMO坪単価表示拡張",
  "version": "0.1",
  "description": "suumo.jp の検索結果の販売価格と専有面積から坪単価を計算して、販売価格の横に表示するChrome拡張",
  "author": "SightSeeker",
  "permissions": [
    "activeTab",
    "*://suumo.jp/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://suumo.jp/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "128": "images/icon_128.png"
  }
}